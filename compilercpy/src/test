decl
integer i,a,d;
enddecl 

integer sum(integer a , integer b,integer c){
    decl
        integer z;
    enddecl
    begin
        z = 0;
        if c==0 then
           z = a+b;
        else
            z = sum(a,b,0)+c; 
        endif;
        return  z;
    end

}

